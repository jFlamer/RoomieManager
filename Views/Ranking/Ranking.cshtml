@model List<RoomieManager.Models.RankedRoomiesViewModel>

<h2>Ranking</h2>

<div>
    Sort by:
    <a asp-action="Ranking" asp-route-sortBy="points">Effort Points</a> |
    <a asp-action="Ranking" asp-route-sortBy="tasks">tasks Done</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th>#</th>
            <th>Name</th>
            <th>Effort Points</th>
            <th>Total number of done tasks</th>
        </tr>
    </thead>
    <tbody>
    @for (int i = 0; i < Model.Count; i++)
    {
        <tr>
            <td>@(i + 1)</td>
            <td>@Model[i].Name</td>
            <td>@Model[i].totalEffortPoints</td>
            <td>@Model[i].totalTasks</td>
        </tr>
    }
    </tbody>
</table>