<h2>Create new task type</h2>

<form  method="post" action="/TaskType/CreateTaskType">
    <div class="form-group">
        <label for="name">Task Type Name</label>
        <input type="text" class="form-control" id="name" name="name" required />
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        <textarea class="form-control" id="description" name="description" required></textarea>
    </div>
    <div class="form-group">
        <label for="duration">Duration (minutes)</label>
        <input type="number" class="form-control" id="duration" name="duration" required />
    </div>
    <div class="form-group">
        <label for="effortPoints">effortPoints Points</label>
        <input type="number" class="form-control" id="effortPoints" name="effortPoints" required />
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>