@model RoomieManager.Models.UserModel

@{
    ViewData["Title"] = "Edit User";
}

<h2>Edit User</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">@ViewBag.ErrorMessage</div>
}


<form asp-action="EditUser" method="post">
    <input type="hidden" name="userId" value="@Model.userId" />
    <table class="table">
        <tr>
            <td>ID</td>
            <td>@Model.userId</td>
        </tr>
        <tr>
            <td>Username</td>
            <td><input type="text" name="_userName" value="@Model.userName" required /></td>
        </tr>
        <tr>
            <td>Password</td>
            <td><input type="password" name="_password" placeholder="Leave blank to keep existing" /></td>
        </tr>
        <tr>
            <td>Confirm Password</td>
            <td><input type="password" name="_confirmPassword" /></td>
        </tr>
        <tr>
            <td>Is Admin</td>
            <td><input type="checkbox" name="_isAdmin" @(Model.isAdmin ? "checked" : "") /></td>
        </tr>
        <tr>
            <td colspan="2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="@Url.Action("AdminPanel", "Admin")" class="btn btn-secondary">Cancel</a>
            </td>
        </tr>
    </table>
</form>
